[[source]]
url = "https://pypi.org/simple"
verify_ssl = true
name = "pypi"

[scripts]
format = "pysen run format"
lint = "pysen run lint"
server = "uvicorn src.server.main:app --reload --reload-dir src/*"
render = "uvicorn src.server.main:app --host 0.0.0.0 --port 10000"
test = "pytest --durations=5 --cov-report term-missing --cov=src"
formatter = "ruff format"
linter = "ruff check src test"

[packages]
fastapi = "*"
uvicorn = "*"

[dev-packages]
pytest = "*"
pytest-cov = "*"
pytest-randomly = "*"
requests = "*"
pipdeptree = "*"
ruff = "*"
httpx = "*"

[requires]
python_version = "3.12"
